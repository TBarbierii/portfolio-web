---
import TailwindIcon from './icons/Stack/TailwindIcon.astro';
import HtmlIcon from './icons/Stack/HtmlIcon.astro';
import CSSIcon from './icons/Stack/CSSIcon.astro';
import JavaScriptIcon from './icons/Stack/JavaScriptIcon.astro';

const TAGS = {
    // TAILWIND: {
    //     name: "Tailwind CSS",
    //     class: "bg-[#003159] text-[#73bcf7]",
    //     icon : TailwindIcon
    // },
    HTML: {
        name: "HTML",
        class: "bg-[#8B4000]/60 text-[#e34c26]",
        icon : HtmlIcon
    },
    CSS: {
        name: "CSS",
        class: "bg-[#00aae4]/60 text-[#51d1f6]",
        icon : CSSIcon
    },
    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-[#f7df1e]/60 text-[#f0db4f]",
        icon : JavaScriptIcon
    },
}

const PROJECTS = [
    {
        title: "Por el momento no cuento con proyectos personales realizados ðŸ¥²",
        description: "Proximamente los irÃ© agregando! ðŸ˜Š",
        link: '#',
        github: '#',
        image: "/projects/projects.webp",
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT]
    }
]

---

{
    PROJECTS.map(({title, description, image, tags}) => (
        <article>
            <h3 class="text-xl sm:text-2xl font-semibold text-purple-400 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="md:flex grid gap-y-2 justify-center gap-x-2 md:flex-row mt-10">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4"/>
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <div class="lg:grid grid-cols-2 lg:grid-cols-1 flex flex-col gap-12 place-items-center justify-center items-center p-12">
                <img class="hover:scale-105 transition-transform rounded-2xl lg:h-[180px] lg:w-[340px] shadow-xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${image}`} />
            </div>   
        </article>
    ))
}